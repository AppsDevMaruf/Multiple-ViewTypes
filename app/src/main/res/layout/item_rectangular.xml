<!-- res/layout/item_rectangular.xml -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Rectangular view content goes here -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rectangularImageView"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ae_credit_card"
        app:shapeAppearanceOverlay="@style/rectangularImageView" />

    <!-- Add other rectangular view elements as needed -->
    <TextView
        android:id="@+id/rectangularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Rectangular Item Text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rectangularImageView"
        app:layout_constraintTop_toTopOf="@+id/rectangularImageView" />

    <!-- Add other rectangular view elements as needed -->
</androidx.constraintlayout.widget.ConstraintLayout>